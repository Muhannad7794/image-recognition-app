{
    "version": 1,
    "type": "machine-learning",
    "info": {
        "name": "AUGMENT Model Training Block",
        "description": "Transfer learning AUG model based on MobileNetV2 to classify images of home office objects based on a Kaggle dataset.",
        "operatesOn": "image",
        "imageInputScaling": "0..1",
        "indRequiresGpu": true,
        "repositoryUrl": "https://github.com/Muhannad7794/image-recognition-app"
    },
    "neuralNetwork": {
        "image": {
            "input": [
                "width",
                "height",
                "channels"
            ],
            "output": [
                "classes"
            ]
        }
    },
    "training": {
        "arguments": [
            {
                "name": "epochs",
                "type": "int",
                "label": "Number of epochs",
                "defaultValue": 40,
                "minimum": 1,
                "category": "training"
            },
            {
                "name": "optimizer",
                "type": "string",
                "label": "Optimizer",
                "defaultValue": "adam",
                "category": "training"
            },
            {
                "name": "finetune_optimizer",
                "type": "string",
                "label": "Fine-tune Optimizer",
                "defaultValue": "adam",
                "category": "training"
            },
            {
                "name": "learning_rate",
                "type": "float",
                "label": "Base learning rate",
                "defaultValue": 0.0001,
                "minimum": 0.0001,
                "maximum": 0.1,
                "category": "training"
            },
            {
                "name": "warmup_learning_rate",
                "type": "float",
                "label": "Warmup learning rate",
                "defaultValue": 0.0001,
                "minimum": 0.0001,
                "maximum": 0.1,
                "category": "training"
            },
            {
                "name": "finetune_learning_rate",
                "type": "float",
                "label": "Fine-tune learning rate",
                "defaultValue": 0.00001,
                "minimum": 0.000001,
                "maximum": 0.1,
                "category": "training"
            },
            {
                "name": "batch_size",
                "type": "int",
                "label": "Batch size",
                "defaultValue": 32,
                "minimum": 8,
                "category": "training"
            },
            {
                "name": "warmup_epochs",
                "type": "int",
                "label": "Warmup epochs",
                "defaultValue": 10,
                "minimum": 0,
                "category": "training"
            },
            {
                "name": "warmup_weight_decay",
                "type": "float",
                "label": "Warmup weight decay",
                "defaultValue": 0.0,
                "minimum": 0.0,
                "maximum": 0.0,
                "category": "training"
            },
            {
                "name": "finetune_weight_decay",
                "type": "float",
                "label": "Fine-tune weight decay",
                "defaultValue": 0.0,
                "minimum": 0.0,
                "maximum": 0.0,
                "category": "training"
            },
            {
                "name": "weight_decay",
                "type": "float",
                "label": "fallback weight decay",
                "defaultValue": 0.0,
                "minimum": 0.0,
                "maximum": 0.0,
                "category": "training"
            },
            {
                "name": "unfreeze_pct",
                "type": "float",
                "label": "Backbone unfreeze percentage (0-1)",
                "defaultValue": 0.25,
                "minimum": 0.0,
                "maximum": 1.0,
                "category": "training"
            },
            {
                "name": "finetune_unfreeze_pct",
                "type": "float",
                "label": "Fine-tune unfreeze percentage (0-1)",
                "defaultValue": 0.25,
                "minimum": 0.0,
                "maximum": 1.0,
                "category": "training"
            },
            {
                "name": "label_smoothing",
                "type": "float",
                "label": "Label smoothing",
                "defaultValue": 0.01,
                "minimum": 0.0,
                "maximum": 0.0,
                "category": "training"
            },
            {
                "name": "use_class_weights",
                "type": "bool",
                "label": "Use class weights",
                "defaultValue": true,
                "category": "training"
            },
            {
                "name": "mixup_alpha",
                "type": "float",
                "label": "MixUp alpha",
                "defaultValue": 0.0,
                "minimum": 0.0,
                "maximum": 0.0,
                "category": "augmentation"
            },
            {
                "name": "cutmix_alpha",
                "type": "float",
                "label": "CutMix alpha",
                "defaultValue": 0.0,
                "minimum": 0.0,
                "maximum": 0.0,
                "category": "augmentation"
            },
            {
                "name": "early_stopping_patience",
                "type": "int",
                "label": "Early stopping patience (val_loss)",
                "defaultValue": 12,
                "minimum": 1,
                "maximum": 50,
                "category": "training"
            },
            {
                "name": "early_stopping_min_delta",
                "type": "float",
                "label": "Early stopping min_delta",
                "defaultValue": 0.001,
                "minimum": 0.0,
                "maximum": 0.1,
                "category": "training"
            }
        ]
    }
}